{
	"compilerOptions": {
		//"target": "es6",
		//"module": "commonjs",
		"target": "esnext",
    	"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
    	"moduleResolution": "node",
    	"esModuleInterop": true,
    	"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"outDir": "out",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
			  "src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"out",
		"node_modules"
	]
}